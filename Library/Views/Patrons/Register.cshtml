@{
  Layout = "_Layout";
}

@using Library.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name) <br><br>

    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user=> user.Email) <br><br>

    @Html.LabelFor(user=> user.Password)
    @Html.PasswordFor(user=> user.Password) <br><br>

    @Html.LabelFor(user=> user.ConfirmPassword)
    @Html.PasswordFor(user=> user.ConfirmPassword) <br><br>

    <input type="submit" value="Register" />
}